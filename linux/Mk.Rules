
#
# Detect operation system
#

ifeq "$(findstring QNX, $(shell uname -a))" "QNX"
    OS := DZY_QNX
    DEF_TYPES := __QNX__
else
    OS := DZY_LINUX
    DEF_TYPES := __LINUX__
endif

#
# Detect kernel version
#
ifneq   "$(findstring 2.4.,$(shell uname -a))" ""
     DZY_VER := -DDZYTOOLS_2_4_X
endif
ifeq   "$(findstring c6x,$(shell echo $CC))" "c6x"
     DZY_VER := -DDZYTOOLS_C_6_X
     TARGET := -march=c674x
endif

#
# Select apropriate IPC methods
#
IPC := __IPC_LINUX__
#IPC_TYPE := _SYSTEMV_IPC_
#IPC_TYPE := _POSIX_IPC_
IPC_TYPE := _INSYS_IPC_

#GPROF := -pg

#
# Setup common Makefile rules and defines
#

CC := $(CSTOOL_PREFIX)gcc
LD := $(CSTOOL_PREFIX)gcc

CFLAGS += -fPIC -Wall -g $(TARGET) -D$(IPC) -D$(IPC_TYPE) -D$(OS) -D$(DEF_TYPES) $(GPROF) $(DZY_VER)

%.o: %.cpp
	$(CC) $(CFLAGS) -c -MD $<
	
%.o: %.c
	$(CC) $(CFLAGS) -c -MD $<

include $(wildcard *.d)

distclean:
	rm -f *.o *~ core
	rm -f *.d *~ core
	rm -f *.so *.a
	rm -f *.0

clean:
	rm -f *.o *~ core
	rm -f *.d *~ core
	rm -f *.so  *.a
	rm -f *.0

SYSLIBDIR := /usr/local/lib/bardy

#
# в каталоге /etc/ld.so.conf.d/
# создать файл bardy.conf
# в котором прописать путь к библиотекам
# /usr/local/lib/bardy
# и выполнить ldconfig -v -n
#

ifeq "$(INSTALL_PREFIX)" ""
install: install.dynamic install.static
install.dynamic:
	mkdir -p $(SYSLIBDIR)
	chmod 777 $(SYSLIBDIR)
	cp -af $(LIBNAME) $(SYSLIBDIR)
	ln -sf $(SYSLIBDIR)/$(LIBNAME) $(SYSLIBDIR)/$(SONAME)
	ln -sf $(SYSLIBDIR)/$(SONAME) $(SYSLIBDIR)/$(BASENAME)
	echo '/usr/local/lib/bardy' > /etc/ld.so.conf.d/bardy.conf
	/sbin/ldconfig
install.static:
	mkdir -p $(SYSLIBDIR)
	chmod 777 $(SYSLIBDIR)
	cp -afv $(LIBNAME) $(SYSLIBDIR)
else
install: install.dynamic install.static
install.dynamic:
	mkdir -p $(INSTALL_PREFIX)$(SYSLIBDIR)
	chmod 777 $(INSTALL_PREFIX)$(SYSLIBDIR)
	cp -af $(LIBNAME) $(INSTALL_PREFIX)$(SYSLIBDIR)
	cp -af $(SONAME) $(INSTALL_PREFIX)$(SYSLIBDIR)
	cp -af $(BASENAME) $(INSTALL_PREFIX)$(SYSLIBDIR)
install.static:
	mkdir -p $(INSTALL_PREFIX)$(SYSLIBDIR)
	chmod 777 $(INSTALL_PREFIX)$(SYSLIBDIR)
	cp -fv $(LIBNAME) $(INSTALL_PREFIX)$(SYSLIBDIR)
endif
